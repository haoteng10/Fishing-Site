<% include partials/header %>

<div class="container">
    <h1>Fishing Sites</h1>

    <div class="row">
        <% Sites.forEach(function(site){ %>
            <% if((value === "NYC") && (site.location === "NYC")){ %>
                <div class="col md3 sm6">
                    <img class="materialboxed" data-caption="<%= site.name %>" width="250" src="<%= site.url %>">
                </div>
            <% } else if ((value === "LA") && (site.location === "LA")){ %>
                   <img class="materialboxed" data-caption="<%= site.name %>" width="250" src="<%= site.url %>">
        <% } %>
        <% }); %>
    </div>
    
    <div class="row">
        <p><a href="/sites/new" class="btn">New</a></p>
    </div>
    
    <% include partials/footer %>
</div> 