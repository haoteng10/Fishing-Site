<% include partials/header %>

<div class="container">
    <h1>Fishing Sites</h1>

    <div class="row">
        <% Sites.forEach(function(site){ %>
            <% if(((value === "NYC") && (site.location === "NYC")) || ((value === "LA") && (site.location === "LA"))){ %>
                <div class="row">
                    <div class="col s12 m7">
                      <div class="card">
                        <div class="card-image">
                          <img src="<%= site.url %>" width="300">
                          <span class="card-title"><%= site.name %></span>
                        </div>
                        <div class="card-content">
                          <p><%= site.description %></p>
                        </div>
                        <div class="card-action">
                          <a href="/sites/<%= site._id %>">More Info</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            <% } %>
        <% }); %>
    </div>
    
    <div class="row" style="margin: 200px 200px">
        <p><a href="/sites/new" class="btn">New</a></p>
    </div>

</div> 

<% include partials/footer %>