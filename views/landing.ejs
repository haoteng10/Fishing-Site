<% include ./partials/header %>

<div class = "container">
<h1>Fishing Sites Finder</h1>

<p>This page allows you to find fishing spots in less than 1 minute.</p>
    <div class="row">
        <p>Choose your location:</p>
    </div>

        <form name="city">
            <div class="input-field col s12">
                <select name="city" form="city" class="validate">
                    <optgroup label="New York">
                        <option value="NYC" >New York City</option>
                        <option value="Buffalo">Buffalo</option>
                        <option value="Albany">Albany</option>
                    </optgroup>
                    <optgroup label="California">
                        <option value="LA">Los Angelas</option>
                        <option value="SFO">San Francisco</option>
                    </optgroup>
                </select>
                <label>Cities</label>
            </div>
        </form>
        
        <div class = "row">
            <form action="/sites/locate" method="post" id="city">
                <button class="btn">Search</button>
            </form>
        </div>

</div> <!-- End of Container -->

