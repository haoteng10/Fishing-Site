<% include partials/header %>

<div class = "container" style="margin: auto; width: 50%; height: 50%;">
    <div class= "row">
        <form action="/sites/<%= site._id %>?_method=PUT" method="post" id = "edit">
            <div class="input-field col s12">
              <input placeholder="JacksonHeight lake" id="name" type="text" class="validate" name="site[name]" form="edit" value="<%= site.name %>">
              <label for="name">Name</label>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input placeholder="http://your-domain.whatever/whatever" id="url" type="text" name="site[url]" form="edit" value="<%= site.url %>">
              <label for="url">Image URL</label>
        </div>
        <div class="input-field col s12">
            <select name="site[location]" form="edit" value="<%= site.location %>">
                <optgroup label="New York">
                    <option value="NYC" >New York City</option>
                </optgroup>
                <optgroup label="California">
                    <option value="LA">Los Angelas</option>
                 </optgroup>
            </select>
            <label>Choose the location</label>    
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input placeholder="description" id="description" type="text" name="site[description]" form="edit" value="<%= site.description %>">
              <label for="description">Description</label>
        </div>
        <div class = "row">
            <button class = "waves-effect waves-light btn">Sumbit!</button>
        </div>
        </form>
    </div>
</div>

<% include partials/footer %>